#include<stdio.h>
#include<cs50.h>
#include<string.h>
#include<ctype.h>
#include<math.h>

int letters(string s);
int words(string s);
int sentences(string s);

int main(){
    string text = get_string("Enter your text : ");
    int letter = letters(text);
    int word = words(text);
    int sentence = sentences(text);
    float L = round(((float)letter / (float)word) * 100.0);
    float S = round(((float)sentence / (float)word) * 100.0);
    float index = 0.0588 * L - 0.296 * S - 15.8;
    index = round(index);
    if(index < 1){
        printf("Before Grade 1\n");
    }
    else if(index > 16){
        printf("Grade 16+\n");
    }
    else{
        printf("Grade %i\n", (int) index);
    }
}

int letters(string s){
    int letter = 0;
    for(int i = 0, len = strlen(s); i < len; i++){
        if(isalpha(s[i])){
            letter++;
        }
    }
    return letter;
}

int words(string s){
    int word = 0;
    for(int i = 0, len = strlen(s); i < len; i++){
        if(isblank(s[i])){
            word++;
        }
    }
    word++;
    return word;
}

int sentences(string s){
    int sentence = 0;
    for(int i = 0, len = strlen(s); i < len; i++){
        if(s[i] == '?' || s[i] == '!' || s[i] == '.'){
            sentence++;
        }
    }
    return sentence;
}
